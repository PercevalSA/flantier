{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:3.9",
    "features": {
        "ghcr.io/devcontainers-contrib/features/flake8:2": {
            "version": "latest",
            "plugins": "flake8-black flake8-isort flake8-print flake8-bandit flake8-pylint flake8-builtins flake8-spellcheck flake8-pytest-style"
        },
        "ghcr.io/devcontainers-contrib/features/flit:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/isort:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/mypy:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/pylint:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/ruff:1": {
            "version": "latest"
        }
    },
    "runArgs": [
        "--userns=keep-id"
    ],
    "containerUser": "vscode", // the value needs to match the value of "remoteUser"
    "postCreateCommand": "python3 -m pip install .",
    "customizations": {
        "vscode": {
            "files.associations": {
                "*.toml": "toml"
            },
            "files.eol": "\n",
            "files.trimTrailingWhitespace": true,
            "editor.formatOnSave": true,
            "editor.rulers": [
                90,
                120
            ],
            "extensions": [
                "aaron-bond.better-comments",
                "eamodio.gitlens",
                "GitHub.copilot",
                "GitHub.vscode-pull-request-github",
                "mhutchie.git-graph",
                "ms-python.black-formatter",
                "ms-python.mypy-type-checker",
                "ms-python.pylint",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "nwgh.bandit",
                "tamasfe.even-better-toml"
            ],
            "files.insertFinalNewline": true,
            "python.linting.pylintEnabled": false,
            "python.linting.flake8Enabled": true,
            "python.formatting.provider": "black",
            "[python]": {
                "editor.codeActionsOnSave": {
                    "source.fixAll": true,
                    "source.organizeImports": true
                },
                "editor.defaultFormatter": "ms-python.black-formatter",
                "editor.formatOnType": true
            }
        }
    }
}